<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asteroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Asteroid">
        <activity
            android:name=".HomeActivity"
            android:exported="false" />
        <activity
            android:name=".login.UserNamePage"
            android:exported="false" />
        <activity
            android:name=".login.SignUpUserInfoPage"
            android:exported="false" />
        <activity
            android:name=".login.SignUpStartNamePage"
            android:exported="false" />
        <activity
            android:name=".login.LoginPage"
            android:exported="false" />
        <activity
            android:name=".login.StartPage"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>